<% form_tag :action => "denialit_email", :id => @hts.id do %>
<% form_for(@hts) do |f| %>
  <table>
    <tr>
      <td><%= label :adresse, "Adresse:" %></td><td><%= f.text_field :email, :readonly => true %></td>
    </tr>
    <tr>
      <td><%= label :cc, "Cc:" %></td><td><%= text_field_tag :cc, "",:size => '50' %></td>
    </tr>
    <tr>
      <td><%= label :betreff, "Betreff:" %></td><td><%= text_field_tag :betreff, "La Vostra richiesta di prenotazione per un seminario di mezza giornata", :size => '50' %></td>
    </tr>
    <tr>
      <td></td><td><%= label :text, "Text:" %></td>
    </tr>
    <tr>
      <td></td><td><%= text_area_tag :text, @mail_text, :size => '100x30' %></td>
    </tr>
</table>
<br/>
<%= submit_tag "Senden" %>
<% end %>
<% end %>
