<table>
  <tr>
  <% if @workshop.invoice == 'ja' %>
    <td><%= link_to 'Zusage mit Anhängen&nbsp;<img src="/images/mail.jpg" width="15">', 
        { :action =>'zusage', :id => @workshop.id}, :title => 'Wird per Email gesendet!' %>
    </td>
  <% else %>
    <td><%= link_to 'Zusage mit Anhängen&nbsp;<img src="/images/mail.jpg" width="15">', 
        { :action =>'zusageohnebill', :id => @workshop.id}, :title => 'Wird per Email gesendet!' %>
    </td>
  <% end %>  
  <% if @workshop.zus_voll == 'ja' %>    
    <td>&nbsp;&nbsp;<%= image_tag("grau_pfeil.png",:width =>"17")%><%=f.label :zv_date, "&nbsp;&nbsp;wurde gesendet am: "+change_date(@workshop.zv_date)%></td>          
  <% end %>
</table>