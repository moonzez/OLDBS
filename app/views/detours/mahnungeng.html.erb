<% form_tag :action => "mahnungeng_email", :id => @tour.id do %>
<% form_for(@tour) do |f| %>
  <table>
    <tr>
      <td><%= label :adresse, "Adresse:" %></td><td><%= f.text_field :email, :readonly => true %></td>
    </tr>
    <tr>
      <td><%= label :cc, "Cc:" %></td><td><%= text_field_tag :cc, "",:size => '50' %></td>
    </tr>
    <tr>
      <td><%= label :betreff, "Betreff:" %></td><td><%= text_field_tag :betreff, "Reminder", :size => '50' %></td>
    </tr>
    <tr>
      <td><%= label :anhang, "Anhang:" %></td><td><%= text_field_tag :anhang, "Invoice_"+@tour.zv_date.strftime("%Y-%m-%d")+".pdf", :readonly => true, :size => '50' %></td>
    </tr>
    <tr>
      <td></td><td><%= label :text, "Text:" %></td>
    </tr>
    <tr>
      <td></td><td><%= text_area_tag :text, @mail_text, :size => '100x30' %></td>
    </tr>
</table>
<br/>
<%= submit_tag "Senden" %>
<% end %>
<% end %>
